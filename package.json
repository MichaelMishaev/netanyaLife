    "@prisma/client": "^5.19.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "ioredis": "^5.4.0",
    "jose": "^6.1.1",
    "next": "^14.2.0",
    "next-auth": "^5.0.0-beta.20",
    "next-intl": "^3.19.0",
    "next-pwa": "^5.6.0",
    "react": "^18.3.0",
